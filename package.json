{
  "name": "nuxt-blog-layer",
  "type": "module",
  "version": "0.0.1",
  "description": "Layer for creating a blog with Nuxt",
  "author": {
    "name": "hywax",
    "url": "https://hywax.space/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hywax/nuxt-blog-layer.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "nuxt.config.ts",
  "files": [
    "app.config.ts",
    "nuxt.config.ts",
    "src/",
    "tailwind.config.ts"
  ],
  "scripts": {
    "build": "nuxi build",
    "dev": "nuxi dev",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "playground:dev": "nuxi dev playground",
    "playground:build": "nuxi build playground",
    "release": "pnpm lint && pnpm build && pnpm playground:build && changelogen --release --push && pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxi typecheck",
    "postinstall": "nuxi prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/content": "^2.13.4",
    "@nuxt/image": "^1.8.1",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@tailwindcss/typography": "^0.5.15",
    "@vueuse/nuxt": "^10.11.1",
    "feed": "^4.2.2",
    "nuxt": "^3.13.2",
    "sitemap": "^8.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^20.17.3",
    "changelogen": "^0.5.7",
    "eslint": "^9.13.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "madge": "^7.0.0",
    "typescript": "^5.6.3",
    "vue-tsc": "^2.1.8"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  }
}
