{
  "name": "nuxt-blog-layer",
  "type": "module",
  "version": "0.0.1",
  "description": "Layer for creating a blog with Nuxt",
  "author": {
    "name": "hywax",
    "url": "https://hywax.space/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hywax/nuxt-blog-layer.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "nuxt.config.ts",
  "files": [
    "app.config.ts",
    "nuxt.config.ts",
    "src/",
    "tailwind.config.ts"
  ],
  "scripts": {
    "build": "nuxi build",
    "dev": "nuxi dev",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "playground:dev": "nuxi dev playground",
    "playground:build": "nuxi build playground",
    "release": "pnpm lint && pnpm build && pnpm playground:build && changelogen --release --push && pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxi typecheck",
    "postinstall": "nuxi prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/content": "^2.13.2",
    "@nuxt/image": "^1.7.0",
    "@nuxtjs/color-mode": "^3.4.2",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@tailwindcss/typography": "^0.5.14",
    "@vueuse/nuxt": "^10.11.1",
    "feed": "^4.2.2",
    "nuxt": "^3.12.4",
    "sitemap": "^8.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.25.1",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.15",
    "changelogen": "^0.5.5",
    "eslint": "^9.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "madge": "^7.0.0",
    "typescript": "^5.5.4",
    "vue-tsc": "^2.0.29"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  }
}
